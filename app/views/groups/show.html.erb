<h3><%= @group.name%></h3>

<%= image_tag @group.icon %>
<p>Total: <%=@group.money_tracks.sum(:amount)%></p>

<table class="table table-striped table-bordered">
 <% if @group.money_tracks.any? %>
    <thead>
        <tr>
        <th>Name</th>
        <th>Value</th>
        <th>Action</th>
        </tr>
    </thead>

    <tbody>
    <% @group.money_tracks.order(created_at:'DESC').each do |fd|%>
    <tr>
      <td><%= fd.name%></th>
      <td><%= fd.amount%></td>
    
      <td class="mb-3 col-sm-3">
  
        <%=link_to "Delete", class:"btn btn-outline-dark"%>
        <%=link_to "Modify", class:"btn btn-outline-dark"%>

      </td>
    </tr>

    </tbody>
    <%end%>
  <%end%>
</table>
<div>
<%=link_to 'Add transcaion', new_group_money_track_path( @group) %>
</div> 